@{
    ViewBag.Title = "Login";
    Layout = "/Views/Shared/_Empty.cshtml";
}
@model Models.LogOn


<div class="container">
    <div class="row">
        <div class="col-md-12 center-block">
            <fieldset>
                <legend>用户登陆</legend>
                @using (Html.BeginForm("Login", "Home"))
                { 
                    <div class="form-group"> 
                        @Html.TextBoxFor(a => a.UserName, new { placeholder = "用户名", @class = "form-control" })
                    </div>
                    <div class="form-group">

                        @Html.PasswordFor(a => a.Password, new { placeholder = "密码", @class = "form-control" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.RemebeMe)
                        &nbsp;&nbsp;
                        @Html.EditorFor(a => a.RemebeMe)
                    </div>
                    <div>
                        <button type="submit" class="btn  btn-primary">登陆</button> 
                    </div>
                    <div>@Html.ValidationSummary(true)</div>
                }
            </fieldset>
        </div>
    </div>
    <hr>
     

</div>